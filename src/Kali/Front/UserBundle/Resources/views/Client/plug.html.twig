{% extends "::layout.html.twig" %}

{% block title %}Mon compte{% endblock %}

{% block body %}
    <div class="login">
        <div class="wrap">
            <div class="col_1_of_login span_1_of_login">
                <h4 class="title">Mon compte</h4>
                <h5 class="sub_title">Modifier une commande, suivre une expédition, et mettre à jour l’info de votre compte.
                    Tout ce dont vous avez besoin au même endroit. Avec quelques clics simples.</h5>
                <div class="button1">
                    <a href="register.html"><input type="submit" name="Submit" value="Continuez"></a>
                </div>
                <div class="clear"></div>
            </div>
            <div class="col_1_of_login span_1_of_login">
                <div class="login-title">
                    <h4 class="title">Clients déjà inscrits</h4>
                    <div class="comments-area">
                        <form>
                            <p>
                                <label>Identifiant</label>
                                <span>*</span>
                                <input type="text" value="">
                            </p>
                            <p>
                                <label>Mot de passe</label>
                                <span>*</span>
                                <input type="password" value="">
                            </p>
                            <p id="login-form-remember">
                                <label><a href="#">Identifiant ou mot de passe oublié ? </a></label>
                            </p>
                            <p>
                                <input type="submit" value="Connexion">
                            </p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
{% endblock %}
