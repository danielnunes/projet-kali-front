{% extends "::layout.html.twig" %}

{% block title %}Se connecter{% endblock %}

{% block body %}
    <div class="login">
        <div class="wrap">

            <div class="col_1_of_login span_1_of_login">
                <div class="login-title">
                    <h4 class="title">Clients déjà inscrits</h4>
                    {{message}}
                    <div class="comments-area">
                        <form action="http://back.kali.dev/api/getlogin"  method="GET" class="fos_user_registration_register">

                                <div class="form-group">
                                    <label class="col-xs-4 control-labell" for="username">Email</label>
                                    <div class="col-sm-8">
                                        <input class="form-control" type="email" id="username" name="_username"  required="required" />
                                    </div>
                                </div>

                                <div class="form-group">
                                    <label class="col-xs-4 control-labell" for="password">Mot de passe</label>
                                    <div class="col-sm-4">
                                        <input class="form-control" type="password" id="password" name="_password" required="required" />
                                    </div>
                                </div>

                            <p>
                                <input type="submit" value="Connexion">
                            </p>
                        </form>
                    </div>
                </div>
            </div>
            <div class="clear"></div>
        </div>
    </div>
{% endblock %}
